{
  "name": "treetabs-vscode",
  "displayName": "TreeTabs_VsCode",
  "description": "A Tree-based layout mananger for open tabs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "publisher": "rebornix",
  "activationEvents": [
    "onView:treeTabs.webViewProviderView",
    "onCommand:treetabs-vscode.start",
    "onCommand:calicoColors.addColor",
    "onCommand:calicoColors.clearColors"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "treetabs-vscode.start",
        "title": "Open TreeTabs WebView",
        "category": "Tree Tabs"
      },
      {
        "command": "treetabs-vscode.rightClick",
        "title": "Tree tabs Right click",
        "category": "Tree Tabs"
      },
      {
        "command": "calicoColors.addColor",
        "category": "Calico Colors",
        "title": "Add Color"
      },
      {
        "command": "calicoColors.clearColors",
        "category": "Calico Colors",
        "title": "Clear Colors",
        "icon": "$(clear-all)"
      },
      {
        "command": "treetabs-vscode.addChild",
        "category": "Tree Tabs",
        "title": "Add Child"
      },
      {
        "command": "treetabs-vscode.addSibling",
        "category": "Tree Tabs",
        "title": "Add Sibling"
      },
      {
        "command": "treetabs-vscode.addParent",
        "category": "Tree Tabs",
        "title": "Add Parent"
      },
      {
        "command": "treetabs-vscode.addRoot",
        "category": "Tree Tabs",
        "title": "Add Root"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "treetabs-vscode.rightClick",
          "group": "navigation"
        },
        {
          "submenu": "treetabs-vscode.menuItems",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "calicoColors.clearColors",
          "group": "navigation",
          "when": "view == calicoColors.colorsView"
        }
      ],
      "treetabs-vscode.menuItems": [
        {
          "command": "treetabs-vscode.addChild",
          "group": "navigation",
          "label": "Add Child"
        },
        {
          "command": "treetabs-vscode.addSibling",
          "group": "navigation",
          "label": "Add Sibling"
        },
        {
          "command": "treetabs-vscode.addParent",
          "group": "navigation",
          "label": "Add Parent"
        },
        {
          "command": "treetabs-vscode.addRoot",
          "group": "navigation",
          "label": "Add Root"
        }
      ]
    },
    "submenus": [
      {
        "id": "treetabs-vscode.addChild",
        "label": "Add Child"
      },
      {
        "id": "treetabs-vscode.addSibling",
        "label": "Add Sibling"
      },
      {
        "id": "treetabs-vscode.addParent",
        "label": "Add Parent"
      },
      {
        "id": "treetabs-vscode.addRoot",
        "label": "Add Root"
      },
      {
        "id": "treetabs-vscode.menuItems",
        "label": "Add to tab tree"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "treetabs",
          "title": "Tree Tabs",
          "icon": "resources/tree-icon.svg"
        }
      ]
    },
    "views": {
      "treetabs": [
        {
          "type": "webview",
          "id": "treeTabs.webViewProviderView",
          "name": "TreeTabs sidebar view"
        }
      ]
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^8.0.2",
    "terser": "3.16.0"
  },
  "resolutions": {
    "terser": "3.14.1"
  },
  "scripts": {
    "vscode:prepublish": "./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "start": "react-scripts start",
    "build": "./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^10.1.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.1.5",
    "react-scripts": "^2.1.3",
    "rewire": "^4.0.1",
    "typescript": "^4.7.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
